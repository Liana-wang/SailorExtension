{
  "name": "sailor-extension",
  "version": "1.0.0",
  "description": "wxt + qiankun 支持微前端的浏览器扩展框架",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run packages",
    "lint": "cross-env NODE_ENV=development eslint --ignore-path .eslintignore --cache **/*.{ts,js,tsx,jsx}",
    "lint-fix": "pnpm run lint --fix",
    "lint-report": "eslint -f junit **/*.{ts,js,tsx,jsx} -o lintReport.xml",
    "icons": "pnpm --filter @sailor-extension/icons run build",
    "utils": "pnpm --filter @sailor-extension/utils run build",
    "core": "pnpm --filter @sailor-extension/core run build",
    "common": "pnpm --filter @sailor-extension/common run build",
    "packages": "pnpm run icons && pnpm run utils && pnpm run core && pnpm run common",
    "sailor:dev": "pnpm --filter sailor-pkg run dev",
    "sailor:build": "pnpm --filter sailor-pkg run build",
    "sailor:zip": "pnpm --filter sailor-pkg run zip",
    "plugins:dev": "pnpm --filter sailor-plugins run dev",
    "plugins:build": "pnpm --filter sailor-plugins run build"
  },
  "keywords": [
    "wxt",
    "qiankun",
    "sandbox"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ant-design/cssinjs": "^1.21.0",
    "@ant-design/icons": "^5.3.7",
    "antd": "^5.19.2",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.11",
    "lodash-es": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^6.25.0",
    "react-router-dom": "^6.25.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-decorators": "^7.2.0",
    "@babel/plugin-transform-class-properties": "^7.24.1",
    "@babel/plugin-transform-classes": "^7.24.1",
    "@babel/plugin-transform-object-rest-spread": "^7.24.1",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/runtime": "^7.4.5",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "babel-plugin-import": "^1.13.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.1.0",
    "eslint-plugin-flowtype": "^5.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "typescript": "^5.5.2"
  }
}